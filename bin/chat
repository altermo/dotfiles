#!/bin/python
import sys
import g4f

def main(args):
    if len(args)<2:
        inp=input('>')
    else:
        inp=' '.join(args[1:])
    response = g4f.ChatCompletion.create(
        #model=g4f.models.claude_v2,
        model=g4f.models.llama2_70b,
        messages=[{"role": "user", "content": inp}],
        stream=True,
    )
    for message in response:
        print(message, flush=True, end='')
if __name__=='__main__':
    main(sys.argv)
