#!/bin/sh
for cls in "firefox"; do
    if [[ "$(hyprctl activewindow -j|jq .class -r)" == $cls ]]; then
        if [[ $(hyprctl clients -j|jq .[].class -r|grep $cls|wc -l) -le 1 ]]; then
            hyprctl notify -1 900 "rgb(ff1ea3)" "          no          "
            exit
        fi
    fi
done

hyprctl dispatch killactive
